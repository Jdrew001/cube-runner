{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false
  },
  "include": ["./src"]
}
